{
  "$schema": "../../node_modules/turbo/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "www#build"],
      "inputs": ["$TURBO_DEFAULT$", ".dev.vars"],
      "outputs": [".output/**"],
      "env": ["*_LLM_API_*"]
    },
    "deploy": {
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$", "$TURBO_ROOT$/apps/www/dist/**", ".output/**"],
      "env": ["CLOUDFLARE_*", "*_LLM_API_*"]
    }
  }
}
