{
  "name": "openmcp-mono",
  "version": "0.0.0",
  "private": true,
  "packageManager": "yarn@4.8.1",
  "engines": {
    "node": ">= 20"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*",
      "packages/*"
    ]
  },
  "scripts": {
    "--deps--": "",
    "check-constraints": "yarn constraints",
    "doctor": "yarn dlx @yarnpkg/doctor",
    "--dev--": "",
    "dev": "turbo run dev --filter www --filter server",
    "build": "turbo run build",
    "deploy": "turbo run deploy",
    "docker.up": "docker compose -f ./docker/docker-compose.yml up -d",
    "docker.down": "docker compose -f ./docker/docker-compose.yml down --remove-orphans",
    "docker.nuke": "yarn docker.down -v",
    "db.migrate": "turbo run migrate.up",
    "db.dev.reset": "turbo run dev.reset",
    "db.dev.seed": "turbo run dev.seed",
    "clean": "rm -r **/node_modules && rm -r **/.nx && rm -r **/dist && rm -r **/build",
    "lint": "turbo run lint --log-order=grouped",
    "lint.fix": "turbo run lint --log-order=grouped -- --fix && yarn format",
    "format": "prettier --ignore-path .eslintignore --write \"**/*.{ts,tsx}\";",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "typegen": "turbo run typegen",
    "release": "yarn changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.2",
    "@yarnpkg/types": "~4.0.1",
    "prettier": "3.5.3",
    "prettier-plugin-classnames": "0.7.8",
    "prettier-plugin-tailwindcss": "0.6.11",
    "turbo": "2.5.2",
    "typescript": "5.8.3"
  },
  "resolutions": {
    "@stoplight/http-spec/openapi3-ts": "4.4.x",
    "kysely": "0.28.0"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-classnames",
      "prettier-plugin-tailwindcss"
    ],
    "customAttributes": [],
    "customFunctions": [
      "tn",
      "twMerge"
    ],
    "endingPosition": "absolute-with-indent",
    "tailwindFunctions": [
      "tn",
      "twMerge"
    ],
    "arrowParens": "avoid",
    "printWidth": 120,
    "trailingComma": "all",
    "proseWrap": "always",
    "singleQuote": true,
    "overrides": [
      {
        "files": "package*.json",
        "options": {
          "printWidth": 1000
        }
      }
    ]
  }
}
