{
  "name": "openmcp-mono",
  "version": "0.0.0",
  "private": true,
  "packageManager": "yarn@4.9.1",
  "engines": {
    "node": ">= 20"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*",
      "packages/*"
    ]
  },
  "bin": {
    "openmcp-dev": "./scripts/openmcp-dev.sh"
  },
  "scripts": {
    "--deps--": "",
    "doctor": "yarn dlx @yarnpkg/doctor",
    "--dev--": "",
    "build": "nx run-many -t build",
    "clean": "rm -r **/node_modules && rm -r **/.nx && rm -r **/dist && rm -r **/build",
    "lint": "nx run-many -t lint",
    "lint.fix": "yarn lint --fix && yarn format",
    "format": "prettier --ignore-path .eslintignore --write \"**/*.{ts,tsx}\";",
    "test": "nx run-many -t test",
    "typecheck": "nx run-many -t typecheck",
    "release": "yarn changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "patch:@changesets/cli@npm%3A2.29.3#~/.yarn/patches/@changesets-cli-npm-2.29.3-b3f38d424c.patch",
    "@yarnpkg/types": "~4.0.1",
    "nx": "20.8.1",
    "prettier": "3.5.3",
    "prettier-plugin-classnames": "0.7.8",
    "prettier-plugin-tailwindcss": "0.6.11",
    "typescript": "5.8.3"
  },
  "resolutions": {
    "@stoplight/http-spec/openapi3-ts": "4.4.x"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-classnames",
      "prettier-plugin-tailwindcss"
    ],
    "customAttributes": [],
    "customFunctions": [
      "tn",
      "twMerge"
    ],
    "endingPosition": "absolute-with-indent",
    "tailwindFunctions": [
      "tn",
      "twMerge"
    ],
    "arrowParens": "avoid",
    "printWidth": 120,
    "trailingComma": "all",
    "proseWrap": "always",
    "singleQuote": true,
    "overrides": [
      {
        "files": "package*.json",
        "options": {
          "printWidth": 1000
        }
      }
    ]
  }
}
