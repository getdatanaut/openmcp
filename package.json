{
  "name": "openmcp-mono",
  "version": "0.0.0",
  "private": true,
  "packageManager": "yarn@4.7.0",
  "engines": {
    "node": ">= 20"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*",
      "packages/*"
    ]
  },
  "scripts": {
    "--deps--": "",
    "check-constraints": "yarn constraints",
    "doctor": "yarn dlx @yarnpkg/doctor",
    "--dev--": "",
    "dev": "nx run-many --target dev --projects www server --output-style stream --parallel 4",
    "docker.up": "docker compose -f ./docker/docker-compose.yml up -d",
    "docker.down": "docker compose -f ./docker/docker-compose.yml down --remove-orphans",
    "docker.nuke": "yarn docker.down -v",
    "clean": "rm -r **/node_modules && rm -r **/.nx && rm -r **/dist && rm -r **/build",
    "lint": "nx run-many --target lint",
    "lint.fix": "yarn lint --fix && prettier --ignore-path .eslintignore --write \"**/*.{ts,tsx}\";",
    "test": "nx run-many --target test",
    "typecheck": "nx run-many --target typecheck",
    "typegen": "nx run-many --target typegen"
  },
  "devDependencies": {
    "@yarnpkg/types": "~4.0.1",
    "nx": "20.6.1",
    "prettier": "3.5.3",
    "prettier-plugin-classnames": "0.7.7",
    "prettier-plugin-tailwindcss": "0.6.11",
    "typescript": "5.8.2"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-classnames",
      "prettier-plugin-tailwindcss"
    ],
    "customAttributes": [],
    "customFunctions": [
      "tn",
      "twMerge"
    ],
    "endingPosition": "absolute-with-indent",
    "tailwindFunctions": [
      "tn",
      "twMerge"
    ],
    "arrowParens": "avoid",
    "printWidth": 120,
    "trailingComma": "all",
    "proseWrap": "always",
    "singleQuote": true,
    "overrides": [
      {
        "files": "package*.json",
        "options": {
          "printWidth": 1000
        }
      }
    ]
  }
}
